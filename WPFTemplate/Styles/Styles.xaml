<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ListBox.xaml" />
        <ResourceDictionary Source="Flyouts.xaml" />
        <ResourceDictionary Source="Animations.xaml" />
        <ResourceDictionary Source="Text.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="ListBox" BasedOn="{StaticResource DefaultListBox}" />
    <Style TargetType="ListBoxItem" BasedOn="{StaticResource DefaultListBoxItem}" />
</ResourceDictionary>